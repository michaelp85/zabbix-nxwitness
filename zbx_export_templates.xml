<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>4.4</version>
    <date>2020-09-15T11:55:19Z</date>
    <groups>
        <group>
            <name>Templates</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Template API NX Witness Server</template>
            <name>Template API NX Witness Server</name>
            <groups>
                <group>
                    <name>Templates</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Cameras</name>
                </application>
                <application>
                    <name>Performance</name>
                </application>
                <application>
                    <name>Server</name>
                </application>
            </applications>
            <items>
                <item>
                    <name>CPU Load %</name>
                    <type>HTTP_AGENT</type>
                    <key>nxServerCpuLoad</key>
                    <value_type>FLOAT</value_type>
                    <units>%</units>
                    <authtype>BASIC</authtype>
                    <username>{$NX_API_USERNAME}</username>
                    <password>{$NX_API_PASSWORD}</password>
                    <applications>
                        <application>
                            <name>Performance</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.body.reply.servers.[&quot;{$NX_SERVERID}&quot;].load.cpuUsageP</params>
                        </step>
                        <step>
                            <type>MULTIPLIER</type>
                            <params>100</params>
                        </step>
                    </preprocessing>
                    <url>https://{$NX_API_IP}:7001/ec2/metrics/values</url>
                    <output_format>JSON</output_format>
                </item>
                <item>
                    <name>Memory Used</name>
                    <type>HTTP_AGENT</type>
                    <key>nxServerMemoryUsed</key>
                    <value_type>FLOAT</value_type>
                    <units>b</units>
                    <authtype>BASIC</authtype>
                    <username>{$NX_API_USERNAME}</username>
                    <password>{$NX_API_PASSWORD}</password>
                    <applications>
                        <application>
                            <name>Performance</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.body.reply.servers.[&quot;{$NX_SERVERID}&quot;].load.serverRamUsage</params>
                        </step>
                    </preprocessing>
                    <url>https://{$NX_API_IP}:7001/ec2/metrics/values</url>
                    <output_format>JSON</output_format>
                </item>
                <item>
                    <name>Network Interface In</name>
                    <type>HTTP_AGENT</type>
                    <key>nxServerNetworkIn</key>
                    <value_type>FLOAT</value_type>
                    <units>bps</units>
                    <authtype>BASIC</authtype>
                    <username>{$NX_API_USERNAME}</username>
                    <password>{$NX_API_PASSWORD}</password>
                    <applications>
                        <application>
                            <name>Performance</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.body.reply.networkInterfaces.[&quot;{$NX_ETHERNET}&quot;].rates.inBps</params>
                        </step>
                    </preprocessing>
                    <url>https://{$NX_API_IP}:7001/ec2/metrics/values</url>
                    <output_format>JSON</output_format>
                </item>
                <item>
                    <name>Network Interface Out</name>
                    <type>HTTP_AGENT</type>
                    <key>nxServerNetworkOut</key>
                    <value_type>FLOAT</value_type>
                    <units>bps</units>
                    <authtype>BASIC</authtype>
                    <username>{$NX_API_USERNAME}</username>
                    <password>{$NX_API_PASSWORD}</password>
                    <applications>
                        <application>
                            <name>Performance</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.body.reply.networkInterfaces.[&quot;{$NX_ETHERNET}&quot;].rates.outBps</params>
                        </step>
                    </preprocessing>
                    <url>https://{$NX_API_IP}:7001/ec2/metrics/values</url>
                    <output_format>JSON</output_format>
                </item>
                <item>
                    <name>Server Status</name>
                    <type>HTTP_AGENT</type>
                    <key>nxServerStatus</key>
                    <authtype>BASIC</authtype>
                    <username>{$NX_API_USERNAME}</username>
                    <password>{$NX_API_PASSWORD}</password>
                    <applications>
                        <application>
                            <name>Server</name>
                        </application>
                    </applications>
                    <valuemap>
                        <name>Service state</name>
                    </valuemap>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.body.reply.servers.[&quot;{$NX_SERVERID}&quot;].availability.status</params>
                        </step>
                        <step>
                            <type>REGEX</type>
                            <params>(.*)
\1</params>
                        </step>
                        <step>
                            <type>REGEX</type>
                            <params>(.*)
\1:Offline=0:Unauthorized=0:Incompatible=0:Recording=1:Online=1</params>
                        </step>
                        <step>
                            <type>REGEX</type>
                            <params>(Offline|Unauthorized|Incompatible|Recording|Online)(?=.*:\1=(\d))
\2</params>
                        </step>
                    </preprocessing>
                    <timeout>5s</timeout>
                    <url>https://{$NX_API_IP}:7001/ec2/metrics/values</url>
                    <output_format>JSON</output_format>
                </item>
                <item>
                    <name>Server Uptime</name>
                    <type>HTTP_AGENT</type>
                    <key>nxServerUptime</key>
                    <value_type>FLOAT</value_type>
                    <units>uptime</units>
                    <authtype>BASIC</authtype>
                    <username>{$NX_API_USERNAME}</username>
                    <password>{$NX_API_PASSWORD}</password>
                    <applications>
                        <application>
                            <name>Server</name>
                        </application>
                    </applications>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.body.reply.servers.[&quot;{$NX_SERVERID}&quot;].availability.uptimeS</params>
                        </step>
                    </preprocessing>
                    <timeout>5s</timeout>
                    <url>https://{$NX_API_IP}:7001/ec2/metrics/values</url>
                    <output_format>JSON</output_format>
                </item>
            </items>
            <discovery_rules>
                <discovery_rule>
                    <name>Cameras</name>
                    <type>HTTP_AGENT</type>
                    <key>getCamerasEx</key>
                    <delay>24h</delay>
                    <authtype>BASIC</authtype>
                    <username>{$NX_API_USERNAME}</username>
                    <password>{$NX_API_PASSWORD}</password>
                    <item_prototypes>
                        <item_prototype>
                            <name>{#CAMERA_NAME} camera status</name>
                            <type>HTTP_AGENT</type>
                            <key>getCamerasEx.status[{#CAMERA_ID}]</key>
                            <delay>3m</delay>
                            <authtype>BASIC</authtype>
                            <username>{$NX_API_USERNAME}</username>
                            <password>{$NX_API_PASSWORD}</password>
                            <applications>
                                <application>
                                    <name>Cameras</name>
                                </application>
                            </applications>
                            <valuemap>
                                <name>Service state</name>
                            </valuemap>
                            <preprocessing>
                                <step>
                                    <type>JSONPATH</type>
                                    <params>$.body.*.status</params>
                                </step>
                                <step>
                                    <type>LTRIM</type>
                                    <params>[&quot;</params>
                                </step>
                                <step>
                                    <type>RTRIM</type>
                                    <params>&quot;]</params>
                                </step>
                                <step>
                                    <type>REGEX</type>
                                    <params>(.*)
\1</params>
                                </step>
                                <step>
                                    <type>REGEX</type>
                                    <params>(.*)
\1:Offline=0:Unauthorized=0:Recording=1:Online=1</params>
                                </step>
                                <step>
                                    <type>REGEX</type>
                                    <params>(Offline|Unauthorized|Recording|Online)(?=.*:\1=(\d))
\2</params>
                                </step>
                            </preprocessing>
                            <timeout>5s</timeout>
                            <url>https://{$NX_API_IP}:7001/ec2/getCamerasEx</url>
                            <query_fields>
                                <query_field>
                                    <name>id</name>
                                    <value>{#CAMERA_ID}</value>
                                </query_field>
                            </query_fields>
                            <output_format>JSON</output_format>
                            <trigger_prototypes>
                                <trigger_prototype>
                                    <expression>{max({$UNAVAIL_MAX})}=0</expression>
                                    <name>{#CAMERA_NAME} camera has a problem</name>
                                    <priority>HIGH</priority>
                                </trigger_prototype>
                            </trigger_prototypes>
                        </item_prototype>
                    </item_prototypes>
                    <timeout>5s</timeout>
                    <url>https://{$NX_API_IP}:7001/ec2/getCamerasEx</url>
                    <lld_macro_paths>
                        <lld_macro_path>
                            <lld_macro>{#CAMERA_ID}</lld_macro>
                            <path>$.id</path>
                        </lld_macro_path>
                        <lld_macro_path>
                            <lld_macro>{#CAMERA_MODEL}</lld_macro>
                            <path>$.model</path>
                        </lld_macro_path>
                        <lld_macro_path>
                            <lld_macro>{#CAMERA_NAME}</lld_macro>
                            <path>$.name</path>
                        </lld_macro_path>
                        <lld_macro_path>
                            <lld_macro>{#CAMERA_RECORDING}</lld_macro>
                            <path>$.status</path>
                        </lld_macro_path>
                    </lld_macro_paths>
                    <preprocessing>
                        <step>
                            <type>JSONPATH</type>
                            <params>$.*</params>
                        </step>
                    </preprocessing>
                </discovery_rule>
            </discovery_rules>
            <macros>
                <macro>
                    <macro>{$NX_API_IP}</macro>
                </macro>
                <macro>
                    <macro>{$NX_API_PASSWORD}</macro>
                    <value></value>
                </macro>
                <macro>
                    <macro>{$NX_API_USERNAME}</macro>
                    <value></value>
                </macro>
                <macro>
                    <macro>{$NX_ETHERNET}</macro>
                    <description>The primary ethernet ID to monitor</description>
                </macro>
                <macro>
                    <macro>{$NX_SERVERID}</macro>
                    <description>The NX server ID that you want to monitor</description>
                </macro>
                <macro>
                    <macro>{$UNAVAIL_MAX}</macro>
                    <value>#2</value>
                    <description>Number of attempts the Camera needs to be offline in order to trigger an alert</description>
                </macro>
            </macros>
        </template>
    </templates>
    <value_maps>
        <value_map>
            <name>Service state</name>
            <mappings>
                <mapping>
                    <value>0</value>
                    <newvalue>Down</newvalue>
                </mapping>
                <mapping>
                    <value>1</value>
                    <newvalue>Up</newvalue>
                </mapping>
            </mappings>
        </value_map>
    </value_maps>
</zabbix_export>
